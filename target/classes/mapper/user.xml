</select>

<update id="updateObject" parameterType="cn.tedu.ems.system.entity.User">
<!--
    updateObject t_user set id=#{id},name=#{userName}
-->
</update>

<insert id="insertObject" parameterType="cn.tedu.ems.system.entity.User">
